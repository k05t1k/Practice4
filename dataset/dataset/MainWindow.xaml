<Window x:Class="dataset.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dataset"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="PizzaDataGrid" Margin="0,50,0,50"/>
        <Button Content="Next" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top" Click="NextButton"/>
        <Button Content="Previous" HorizontalAlignment="Left" Margin="44,389,0,0" VerticalAlignment="Top" Click="PreviousButton"/>
        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Margin="24,18,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Поиск" HorizontalAlignment="Left" Margin="149,17,0,0" VerticalAlignment="Top" Click="SearchButton"/>
        <ComboBox x:Name="FilterCombo" HorizontalAlignment="Left" Margin="292,16,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="FilterCombo_SelectionChanged"/>
        <Button Content="Фильтр" HorizontalAlignment="Left" Margin="417,17,0,0" VerticalAlignment="Top" Click="FilterButton"/>
    </Grid>
</Window>
